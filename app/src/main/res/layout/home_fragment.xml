<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment">

        <Button
            android:id="@+id/core_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_core_ui"
            app:layout_constraintBottom_toTopOf="@+id/dialog_ui"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/dialog_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_dialog_ui"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/core_ui"
            app:layout_constraintStart_toStartOf="@+id/core_ui"
            app:layout_constraintTop_toBottomOf="@id/core_ui" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>